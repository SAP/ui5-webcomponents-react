{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "version": "1.5.0",
  "npmClient": "yarn",
  "command": {
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "yes": true,
      "preid": "rc",
      "message": "chore(release): publish %s [ci skip]"
    },
    "publish": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "yes": true,
      "preid": "rc",
      "preDistTag": "next",
      "message": "chore(release): publish %s [ci skip]"
    }
  }
}
