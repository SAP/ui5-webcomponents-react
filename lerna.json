{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": true,
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "version": "1.0.1-rc.0",
  "npmClient": "yarn",
  "command": {
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "yes": true,
      "preid": "rc",
      "message": "chore(release): publish %s [ci skip]",
      "forcePublish": true
    },
    "publish": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "yes": true,
      "preid": "rc",
      "preDistTag": "next",
      "message": "chore(release): publish %s [ci skip]",
      "forcePublish": true
    }
  }
}
