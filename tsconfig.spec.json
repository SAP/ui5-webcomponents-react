{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["es2022", "dom"],
    "types": ["cypress", "node", "@testing-library/cypress"],
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "cypress/**/*.ts",
    "cypress/**/*.tsx",
    "**/*.cy.ts",
    "**/*.cy.tsx",
    "cypress.config.ts",
    "docs/knowledge-base/*.tsx",
    "docs/knowledgeBaseExamples/*.tsx",
    "vite.config.ts"
  ]
}
