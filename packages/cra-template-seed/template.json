{
  "package": {
    "dependencies": {
      "@testing-library/jest-dom": "^5.11.4",
      "@testing-library/react": "^11.1.0",
      "@testing-library/user-event": "^12.1.10",
      "@ui5/webcomponents": "~1.2.1",
      "@ui5/webcomponents-fiori": "~1.2.1",
      "@ui5/webcomponents-icons": "~1.2.1",
      "@ui5/webcomponents-react": "latest",
      "axios": "^0.21.1",
      "formik": "^2.1.7",
      "i18next": "^19.7.0",
      "i18next-browser-languagedetector": "^6.0.1",
      "react-helmet": "^6.1.0",
      "react-i18next": "^11.7.2",
      "react-query": "^3.8.2",
      "react-router-dom": "^5.2.0",
      "yup": "^0.32.8"
    },
    "devDependencies": {
      "@commitlint/cli": "^16.2.1",
      "@commitlint/config-conventional": "^16.2.1",
      "@types/jest": "^27.4.1",
      "husky": "^7.0.4",
      "json-server": "^0.17.0",
      "msw": "^0.39.1",
      "nodemon": "^2.0.15",
      "npm-run-all": "^4.1.5",
      "prettier": "^2.5.1"
    },
    "scripts": {
      "start:mock-server": "nodemon --watch server --exec npx json-server --p 3001 server/mockserver.js --routes server/routes.json",
      "test": "react-scripts test --silent",
      "test:ci": "npm run test -- --watchAll=false",
      "test:coverage": "npm run test -- --watchAll=false --coverage",
      "lint": "eslint --quiet .",
      "lint:fix": "eslint . --fix",
      "prettier": "prettier --config .prettierrc --check \"src/**/*.js\"",
      "prettier:fix": "prettier --config .prettierrc --write \"src/**/*.js\"",
      "prepare": "husky install"
    },
    "browserslist": {
      "production": [
        ">0.2%",
        "not dead",
        "not op_mini all",
        "not IE 11",
        "not Edge <= 18"
      ],
      "development": [
        "last 1 chrome version",
        "last 1 firefox version",
        "last 1 safari version"
      ]
    },
    "jest": {
      "transformIgnorePatterns": [
        "node_modules/(?!(@ui5|lit-html)).*\\.js$"
      ]
    }
  }
}
