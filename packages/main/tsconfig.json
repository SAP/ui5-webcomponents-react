{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "isolatedModules": true,
    "emitDeclarationOnly": true
  },
  "references": [
    {
      "path": "../base"
    }
  ],
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.cy.ts",
    "**/*.test.tsx",
    "**/*.cy.tsx",
    "**/CodeGen.tsx",
    "**/*.stories.tsx"
  ]
}
