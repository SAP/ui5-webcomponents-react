{
  "presets": [
    [
      "@babel/preset-env",
      {
        "modules": false,
        "browserslistEnv": "production"
      }
    ],
    [
      "@babel/preset-react",
      {
        "useSpread": true
      }
    ],
    "@babel/preset-typescript"
  ],
  "env": {
    "cjs": {
      "sourceType": "unambiguous", // Resolves TypeError: Cannot assign to read only property 'exports' https://github.com/babel/babel/issues/10792
      "presets": [
          "@babel/preset-env",
          "@babel/preset-react"
      ],
      "plugins": [
          [
              "client-only-require",
              {
                  "extensions": [
                      "less",
                      "css"
                  ]
              }
          ],
          ["@babel/plugin-transform-runtime", { "corejs": 3, "proposals": true }],
          ["@babel/plugin-proposal-decorators", { "version": "2023-05" }],
          "@babel/plugin-proposal-object-rest-spread",
          "@babel/plugin-proposal-class-properties",
          "@babel/plugin-proposal-export-default-from",
            [
              "./babel-plugin-change-require-extension.js",
              {
                "mode": "cjs"
              }
            ]
      ]
    }
  },
  "ignore": ["**/*.cy.ts", "**/*.cy.tsx", "**/CodeGen.tsx", "**/*.stories.tsx"]
}
