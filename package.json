{
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "start": "lerna run build:i18n && start-storybook --modern --no-manager-cache -p 6006 -c .storybook",
    "build": "node scripts/build.js",
    "build:storybook": "lerna run build:i18n && build-storybook --modern -c .storybook -o .out",
    "postinstall": "rimraf node_modules/@types/mocha",
    "pretest": "rimraf coverage && lerna run build:i18n",
    "test": "jest --config=config/jest.config.js --coverage",
    "clean": "lerna run clean --stream && rimraf coverage",
    "prettier:all": "prettier --write --config ./prettier.config.cjs \"packages/**/*.{ts,tsx,mdx}\"",
    "lint": "eslint packages",
    "lerna:version-dryrun": "lerna version --conventional-graduate --no-git-tag-version --no-push",
    "deploy:storybook": "storybook-to-ghpages --script=build:storybook --ci",
    "create-webcomponents-wrapper": "node --experimental-json-modules ./packages/main/scripts/create-web-components-wrapper.mjs && node --experimental-json-modules ./scripts/generate-theming-parameters.js",
    "examples:recreate-seed": "rimraf examples/seed-test && yarn create react-app examples/seed-test --template file:./packages/cra-template-seed",
    "examples:start-seed": "cd examples/seed-test && SKIP_PREFLIGHT_CHECK=true yarn start",
    "prepare": "husky install",
    "chromatic": "cross-env STORYBOOK_ENV=chromatic npx chromatic --build-script-name build:storybook"
  },
  "dependencies": {
    "@storybook/addon-a11y": "6.5.6",
    "@storybook/addon-essentials": "6.5.6",
    "@storybook/react": "6.5.6",
    "@storybook/theming": "6.5.6",
    "@ui5/webcomponents": "~1.4.0",
    "@ui5/webcomponents-fiori": "~1.4.0",
    "@ui5/webcomponents-icons": "~1.4.0",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-syntax-highlighter": "^15.2.1",
    "tocbot": "^4.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-react": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@semantic-release/github": "^8.0.0",
    "@storybook/builder-webpack5": "6.5.6",
    "@storybook/manager-webpack5": "6.5.6",
    "@storybook/storybook-deployer": "2.8.11",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^13.0.0",
    "@testing-library/react-17": "npm:@testing-library/react@^12.1.4",
    "@testing-library/react-hooks": "^7.0.0",
    "@types/node": "^16.0.0",
    "@types/react": "^18.0.6",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "@ui5/webcomponents-tools": "~1.4.0",
    "chromatic": "^6.5.3",
    "dedent": "^0.7.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.21.3",
    "eslint-plugin-react-hooks": "^4.1.2",
    "eslint-plugin-storybook": "^0.5.12",
    "glob": "^8.0.1",
    "handlebars": "^4.7.7",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.0.1",
    "jest-canvas-mock": "^2.2.0",
    "jest-environment-jsdom": "^28.0.1",
    "lerna": "^5.0.0",
    "lint-staged": "^13.0.0",
    "mkdirp": "^1.0.4",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react-16": "npm:react@^16.14.0",
    "react-17": "npm:react@^17.0.2",
    "react-dom-16": "npm:react-dom@^16.14.0",
    "react-dom-17": "npm:react-dom@^17.0.2",
    "rimraf": "^3.0.1",
    "turndown": "^7.0.0",
    "typescript": "4.7.3",
    "webpack": "^5.67.0",
    "whatwg-fetch": "^3.6.2"
  },
  "resolutions": {
    "trim": "0.0.3",
    "@storybook/react/webpack": "^5.67.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mdx}": [
      "prettier -config ./prettier.config.cjs --write"
    ]
  },
  "type": "module",
  "browserslist": {
    "production": [
      "> 0.2%",
      "not dead",
      "not op_mini all",
      "not IE 11",
      "not Edge <= 18",
      "not ios_saf < 12"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 edge version",
      "last 1 safari version",
      "last 1 firefox version"
    ]
  }
}
