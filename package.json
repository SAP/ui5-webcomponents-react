{
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "start": "lerna run build:i18n && start-storybook --no-manager-cache -p 6006 -c .storybook",
    "build": "npm-run-all -s clean build:bundle build:types",
    "build:bundle": "lerna run build --stream",
    "build:types": "lerna run build:types --stream",
    "build:storybook": "lerna run build:i18n && build-storybook -c .storybook -o .out",
    "pretest": "rimraf coverage && lerna run build:i18n",
    "test": "jest --config=config/jest.config.js --coverage",
    "clean": "lerna run clean --stream && rimraf coverage",
    "prettier:all": "prettier --write --config ./prettier.config.cjs \"packages/**/*.{ts,tsx,mdx}\"",
    "lint": "eslint packages",
    "lerna:version-dryrun": "lerna version --conventional-graduate --no-git-tag-version --no-push",
    "deploy:storybook": "lerna run build:i18n && storybook-to-ghpages --ci",
    "create-webcomponents-wrapper": "node --experimental-json-modules ./packages/main/scripts/create-web-components-wrapper.mjs",
    "examples:recreate-seed": "rimraf examples/seed-test && yarn create react-app examples/seed-test --template file:./packages/cra-template-seed",
    "examples:mock-seed": "cd examples/seed-test && SKIP_PREFLIGHT_CHECK=true yarn mock"
  },
  "dependencies": {
    "@storybook/addon-actions": "6.1.5",
    "@storybook/addon-controls": "6.1.6",
    "@storybook/addon-docs": "6.1.5",
    "@storybook/addon-toolbars": "6.1.5",
    "@storybook/addons": "6.1.5",
    "@storybook/cli": "6.1.5",
    "@storybook/react": "6.1.5",
    "@storybook/theming": "6.1.5",
    "@ui5/webcomponents": "1.0.0-rc.10",
    "@ui5/webcomponents-fiori": "1.0.0-rc.10",
    "@ui5/webcomponents-icons": "1.0.0-rc.10",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-syntax-highlighter": "^15.2.1",
    "tocbot": "^4.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.8",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.1",
    "@babel/plugin-proposal-numeric-separator": "^7.12.7",
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.3.2",
    "@storybook/storybook-deployer": "^2.8.6",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.2",
    "@types/jest": "^26.0.8",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "@ui5/webcomponents-tools": "1.0.0-rc.10",
    "babel-loader": "^8.1.0",
    "chalk": "^4.0.0",
    "dedent": "^0.7.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-react": "^7.21.3",
    "eslint-plugin-react-hooks": "^4.1.2",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.4.2",
    "jest-canvas-mock": "^2.2.0",
    "jest-environment-jsdom-sixteen": "^1.0.2",
    "lerna": "^3.20.2",
    "lint-staged": "^10.2.11",
    "micromatch": "^4.0.2",
    "minimist": "^1.2.5",
    "mkdirp": "^1.0.4",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react-app-polyfill": "^2.0.0",
    "rimraf": "^3.0.1",
    "rollup": "^2.23.0",
    "rollup-plugin-terser": "^7.0.2",
    "targz": "^1.0.1",
    "turndown": "^7.0.0",
    "typescript": "^4.0.3"
  },
  "resolutions": {
    "@types/react": "17.0.0",
    "@babel/runtime": "7.12.5",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mdx}": [
      "prettier -config ./prettier.config.cjs --write"
    ]
  },
  "type": "module"
}
