{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "target": "ES2015",
    "lib": ["es2019", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@docs/*": [".storybook/components/*"],
      "@shared/*": ["shared/*"],
      "@ui5/webcomponents-react/*": ["./packages/main/src/*"],
      "@ui5/webcomponents-react-base/*": ["./packages/base/src/*"],
      "@ui5/webcomponents-react-charts/*": ["./packages/charts/src/*"]
    },
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": ["packages/**/*", "shared/**/*"],
  "exclude": ["node_modules"],
  "files": ["types.d.ts"]
}
