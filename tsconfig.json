{
  "compilerOptions": {
    "outDir": "build",
    "module": "esnext",
    "target": "ES2015",
    "lib": ["es2019", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@docs/*": [".storybook/components/*"],
      "@shared/*": ["shared/*"],
      "@ui5/webcomponents-react/*": ["node_modules/@ui5/webcomponents-react/src/*"],
      "@ui5/webcomponents-react-base/*": ["node_modules/@ui5/webcomponents-react-base/src/*"],
      "@ui5/webcomponents-react-charts/*": ["node_modules/@ui5/webcomponents-react-charts/src/*"]
    },
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["packages/**/*", "shared/**/*"],
  "exclude": ["node_modules"],
  "files": ["types.d.ts"]
}
