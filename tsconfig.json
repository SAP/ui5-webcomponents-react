{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "target": "ES2015",
    "lib": ["es2019", "dom"],
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@docs/*": [".storybook/components/*"],
      "@shared/*": ["shared/*"],
      "@ui5/webcomponents-react": ["node_modules/@ui5/webcomponents-react/src/index.ts"],
      "@ui5/webcomponents-react/*": ["node_modules/@ui5/webcomponents-react/src/*"],
      "@ui5/webcomponents-react-base": ["node_modules/@ui5/webcomponents-react-base/src/index.ts"]
    },
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": ["packages/**/*", "shared/**/*"],
  "exclude": ["node_modules"],
  "files": ["types.d.ts"]
}
